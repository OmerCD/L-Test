<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:progress="clr-namespace:Client.M_CustomControls"
             x:Class="Client.TestSayfasi">
    <ContentPage.Content>
        <Grid x:Name="AnaGrid" x:FieldModifier="public">
            <ScrollView x:Name="ScrollView">
                
            </ScrollView>
            <progress:RadialProgressBar x:Name="Sure"
                                        Minimum="0"
                                        Maximum="50"
                                    HorizontalOptions="Start"                                        
                                    VerticalOptions="Start"
                                    LabelHidden="True"
                                    ProgressColor="DeepSkyBlue"
                                    HeightRequest="50"                                      
                                    WidthRequest="50"
                                    Margin="10,10,0,0"
                                    />
            <Label Margin="24,22,0,0" TextColor="White" FontSize="Medium" FontAttributes="Bold" BindingContext="{x:Reference Sure}"   
                   Text="{Binding Value}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>