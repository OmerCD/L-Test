<UserControl x:Class="ltest.UserControllers.UcSoru"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ltest.UserControllers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Style="{StaticResource BorderStyle}">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="İlk Osmanlı Padişahı Kimdir?" HorizontalAlignment="Center" VerticalAlignment="Center" Name="Soru" TextWrapping="Wrap" Height="Auto" FontFamily="Cabin" FontSize="32" />
            </Label>
        </Border>
        <Grid Grid.Row="1" x:Name="Cevaplar">

        </Grid>
    </Grid>
</UserControl>
