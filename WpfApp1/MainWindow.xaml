<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" ResizeMode="NoResize">
    <Grid x:Name="anaGrid" Loaded="anaGrid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" ForceCursor="True" MouseDown="UstBorder_MouseDown" Background="#F3AC122E">
            <DockPanel Width="142" HorizontalAlignment="Right">
                <Button FontSize="20" Style="{DynamicResource MiniButonlar}" Margin="0,0,0,1">
                    <TextBlock Text="&#9776;" Margin="0,0,0,0"/>
                </Button>
                <Button Style="{DynamicResource MiniButonlar}" Margin="0,0,0,0" Click="Simge">
                    <TextBlock Text="_" Margin="0,0,0,5"/>
                </Button>
                <Button Content="▢" Style="{DynamicResource MiniButonlar}" Margin="1,0,1,0" Click="Buyult"/>
                <Button Content="X" Style="{DynamicResource MiniButonlarCikis}" Margin="0,0,0,0" Click="Kapat"/>
            </DockPanel>
        </Border>
        <Border Grid.Row="1" Background="#F3BB4359">
            <Border.Effect>
                <DropShadowEffect Direction="220" Opacity="0.35" ShadowDepth="4" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" >
                    <Button Style="{DynamicResource MenuButonlar}" Click="Baglangic">
                        <Label Content="Başlangıç" Style="{DynamicResource UstMenuLabel}"/>
                    </Button>
                    <Button Style="{DynamicResource MenuButonlar}" Click="Testler">
                        <Label Content="Testler" Style="{DynamicResource UstMenuLabel}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <!--İçerik-->
        <Border Grid.Row="2">
            <Border.Background>
                <ImageBrush ImageSource="Images/Untitled-1.png" Stretch="UniformToFill"/>
            </Border.Background>
            <Grid x:Name="icerik">
            </Grid>
        </Border>
        <DockPanel Grid.Row="3">
            <Label Content="Durum:" HorizontalContentAlignment="Center" Height="auto" Width="200"  Background="#FF83E3F7" FontSize="20" Foreground="White" Padding="0" FontFamily="Titillium Web SemiBold"  />
            <Label x:Name="yaz" Content="" Height="auto"  Style="{DynamicResource Label}" Background="#FFB8ECF7"/>
        </DockPanel>
    </Grid>
</Window>
